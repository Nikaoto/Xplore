<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.xplore">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.VIBRATE" />

    <application
        android:name=".XploreApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".maps.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity
            android:name=".reserve.ReserveInfoActivity"
            android:label="@string/nav_lib_title"
            android:screenOrientation="portrait" />
        <activity
            android:name=".groups.search.ViewGroupActivity"
            android:label="@string/view_group"
            android:screenOrientation="portrait" />
        <activity
            android:name=".groups.create.SearchDestinationActivity"
            android:label="@string/choose_destination"
            android:screenOrientation="portrait" />
        <activity
            android:name=".groups.create.SearchUsersActivity"
            android:label="@string/search_users"
            android:screenOrientation="portrait" />
        <activity
            android:name=".account.GoogleSignInActivity"
            android:label="@string/authorization"
            android:screenOrientation="portrait" />
        <activity
            android:name=".account.RegisterActivity"
            android:label="@string/register"
            android:screenOrientation="portrait" />
        <activity
            android:name=".user.UserProfileActivity"
            android:label="@string/profile"
            android:screenOrientation="portrait" />
        <activity
            android:name=".groups.create.CreateGroupActivity"
            android:label="@string/create_party"
            android:screenOrientation="portrait" />

        <activity
            android:name=".settings.SettingsActivity"
            android:label="Settings"/>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

    </application>

</manifest>