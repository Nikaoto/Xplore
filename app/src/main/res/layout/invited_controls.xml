<?xml version="1.0" encoding="utf-8"?>
<!-- Layout for invited user when viewing group -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Separator for centering the buttons -->
    <android.support.v4.widget.Space
        android:id="@+id/separator"
        android:layout_centerHorizontal="true"
        android:layout_width="2dp"
        android:layout_height="wrap_content" />

    <!-- Accept Invite -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/acceptInviteButton"
        android:text="@string/accept_invite"
        android:padding="@dimen/controls_button_text_padding"
        android:fontFamily="sans-serif-medium"
        app:backgroundTint="@color/subtleGreen"
        android:layout_marginLeft="5dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/separator"
        android:textSize="@dimen/controls_button_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!-- Decline Invite -->
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/declineInviteButton"
        android:text="@string/decline_invite"
        android:padding="@dimen/controls_button_text_padding"
        android:layout_marginRight="5dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/separator"
        android:fontFamily="sans-serif-medium"
        app:backgroundTint="@color/subtleRed"
        android:textSize="@dimen/controls_button_text_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>