<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/lib_layout">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/user_profile_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/user_profile_image"
                android:background="@drawable/profile_picture_border"
                android:scaleType="fitXY"
                android:layout_width="@dimen/group_leader_profile_wh"
                android:layout_height="@dimen/group_leader_profile_wh"/>

            <TextView
                android:id="@+id/user_rep_text"
                android:text="-"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorRepNumGrey"
                android:textSize="23sp"
                android:layout_below="@id/user_profile_image"
                android:layout_centerInParent="true"/>

            <TextView
                android:id="@+id/user_rep_label"
                android:text="@string/reputation_caps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_below="@id/user_rep_text"
                android:layout_centerInParent="true"
                android:textStyle="bold"
                android:fontFamily="monospace" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="@dimen/group_leader_profile_wh"
                android:layout_height="@dimen/group_leader_profile_wh"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/imageProgressBar" />

        </RelativeLayout>

        <TextView
            android:id="@+id/user_fname_text"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:text="-"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="21sp"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/user_lname_text"
            android:text="-"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="21sp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/user_age_text"
            android:text="Age:"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="21sp"
            android:layout_marginTop="6dp" />

        <TextView
            android:id="@+id/user_tel_text"
            android:text="Tel:"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="6dp" />
        <TextView
            android:id="@+id/user_email_text"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="6dp" />
    </LinearLayout>
</RelativeLayout>