<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/titleTextView"
            android:text="Register"
            android:textSize="30sp"
            android:textColor="@color/colorDarkGrey"
            android:textStyle="bold"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_text_margin_top">

            <TextView
                android:id="@+id/fnameLabelTextView"
                android:text="First Name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/fnameEditText"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:layout_marginTop="23dp"/>

            <EditText
                android:id="@+id/fnameEditText"
                android:layout_toRightOf="@id/fnameLabelTextView"
                android:inputType="textPersonName|textCapWords"
                android:layout_marginLeft="@dimen/reg_text_margin_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/edit_text_border"
                android:maxLines="1"
                android:minEms="15"
                android:maxEms="30"
                android:textSize="@dimen/reg_text_size"
                android:paddingLeft="@dimen/reg_text_padding_left"
                android:paddingBottom="@dimen/reg_text_padding_top_bot"
                android:paddingTop="@dimen/reg_text_padding_top_bot"/>

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_text_margin_top">

            <TextView
                android:id="@+id/lnameLabelTextView"
                android:text="Last Name"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="@dimen/reg_label_size"
                android:layout_alignBaseline="@id/lnameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/lnameEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/lnameLabelTextView"
                android:inputType="textPersonName|textCapWords"
                android:layout_marginLeft="@dimen/reg_text_margin_left"
                android:background="@drawable/edit_text_border"
                android:maxLines="1"
                android:minEms="15"
                android:maxEms="35"
                android:textSize="@dimen/reg_text_size"
                android:paddingLeft="@dimen/reg_text_padding_left"
                android:paddingBottom="@dimen/reg_text_padding_top_bot"
                android:paddingTop="@dimen/reg_text_padding_top_bot" />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_text_margin_top">

            <TextView
                android:id="@+id/emailLabelTextView"
                android:text="Email"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/emailEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/emailEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/emailLabelTextView"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="@dimen/reg_text_margin_left"

                android:background="@drawable/edit_text_border"
                android:maxLines="1"
                android:minEms="15"
                android:maxEms="30"
                android:textSize="@dimen/reg_text_size"
                android:paddingLeft="@dimen/reg_text_padding_left"
                android:paddingBottom="@dimen/reg_text_padding_top_bot"
                android:paddingTop="@dimen/reg_text_padding_top_bot" />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_text_margin_top">

            <TextView
                android:id="@+id/numLabelTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Number"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:layout_alignBaseline="@+id/numEditText" />

            <EditText
                android:id="@+id/numEditText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/numLabelTextView"
                android:inputType="number"
                android:layout_marginLeft="@dimen/reg_text_margin_left"
                android:background="@drawable/edit_text_border"
                android:maxLines="1"
                android:minEms="10"
                android:maxEms="20"
                android:textSize="@dimen/reg_text_size"
                android:paddingLeft="@dimen/reg_text_padding_left"
                android:paddingBottom="@dimen/reg_text_padding_top_bot"
                android:paddingTop="@dimen/reg_text_padding_top_bot" />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/reg_text_margin_top">

            <TextView
                android:id="@+id/bdateLabelTextView"
                android:text="Birth Date"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"
                android:layout_alignBaseline="@id/bdateTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/bdateTextView"
                android:textSize="20sp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:minEms="6"
                android:layout_toRightOf="@id/bdateLabelTextView"
                android:layout_marginLeft="@dimen/reg_text_margin_left"
                android:background="@drawable/edit_text_border"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="yyyy/mm/dd"
                android:layout_below="@id/bdateTextView"
                android:layout_alignLeft="@id/bdateTextView"
                android:layout_marginLeft="@dimen/reg_text_margin_left"
                android:textSize="15sp" />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_marginTop="@dimen/reg_text_margin_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profileLabelTextView"
                android:text="Profile Picture"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"

                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:id="@+id/profileImageView"
                android:background="@drawable/profile_picture_border"
                android:layout_toRightOf="@id/profileLabelTextView"
                android:layout_marginLeft="25dp"

                android:layout_width="@dimen/group_leader_profile_wh"
                android:layout_height="@dimen/group_leader_profile_wh" />

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center_horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <Button
            android:id="@+id/doneButton"
            android:text="@string/done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="19sp"
            app:backgroundTint="@color/colorAccent"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"/>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>