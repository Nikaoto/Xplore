<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/chooseReserve_button"
            android:text="@string/choose_destination"
            android:textSize="16sp"
            app:backgroundTint="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:text="@string/destination"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/main_text_margin_top"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <Button
            android:id="@+id/createGroup_reserveButton"
            android:layout_width="match_parent"
            android:layout_height="@dimen/lib_button_height"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:text="."
            android:fontFamily="sans-serif-condensed"
            android:shadowColor="@android:color/black"
            android:shadowRadius="8"
            android:textSize="@dimen/lib_button_text_size"
            android:textAllCaps="true"
            android:textColor="@color/colorLibText"
            android:gravity="bottom|left"
            android:paddingLeft="@dimen/lib_text_padding_left"
            android:paddingRight="@dimen/lib_text_padding_left"
            android:paddingBottom="@dimen/lib_button_text_padding_bottom"
            android:layout_marginTop="@dimen/lib_button_margin_top"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/dateStart_label"
                android:text="@string/date_start"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/chooseStartDate"
                android:layout_alignBaseline="@+id/chooseStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/dateStart_text"
                android:layout_below="@id/dateStart_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="11dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"/>

            <Button
                android:id="@+id/chooseStartDate"
                android:text="@string/set"
                android:textSize="15sp"
                app:backgroundTint="@color/colorAccent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/dateEnd_label"
                android:text="@string/date_end"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@+id/chooseEndDate"
                android:layout_alignBaseline="@+id/chooseEndDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <TextView
                android:id="@+id/dateEnd_text"
                android:layout_below="@id/dateEnd_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="9dp"
                android:layout_marginTop="11dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="20sp"/>


            <Button
                android:id="@+id/chooseEndDate"
                android:layout_below="@id/chooseStartDate"
                android:text="@string/set"
                android:textSize="15sp"
                app:backgroundTint="@color/colorAccent"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="40dp"
                android:paddingLeft="14dp"
                android:paddingRight="14dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

                <TextView
                    android:text="@string/group_members"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_toLeftOf="@+id/inviteMembers_button"
                    android:layout_alignBaseline="@+id/inviteMembers_button"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textAppearance="@style/TextAppearance.AppCompat"/>

                <Button
                    android:id="@+id/inviteMembers_button"
                    android:text="@string/invite_members"
                    android:textSize="15sp"
                    app:backgroundTint="@color/colorAccent"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="14dp"
                    android:paddingRight="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </RelativeLayout>

        <View style="@style/Divider"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/createGroup_member_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">
        </android.support.v7.widget.RecyclerView>

        <View style="@style/dashed_divider"/>

