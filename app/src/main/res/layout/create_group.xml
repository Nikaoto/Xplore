        <TextView
            android:text="@string/has_visited_question"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="5dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"/>

        <RadioGroup
            android:id="@+id/radioGroup"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:text="@string/yes"
                android:id="@+id/yes_rb"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RadioButton
                android:text="@string/no"
                android:id="@+id/no_rb"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RadioGroup>

        <View style="@style/dashed_divider"
            android:layout_marginTop="10dp"/>

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
            android:id="@+id/createGroup_prefs_text"
            android:text="@string/group_preferences"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.AppCompat"/>

        <ImageView
            android:id="@+id/prefs_help"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_help"
            android:layout_toRightOf="@id/createGroup_prefs_text"
            android:layout_width="@dimen/ic_help_wh"
            android:layout_height="@dimen/ic_help_wh" />
        </RelativeLayout>

        <EditText
            android:id="@+id/groupPrefs_editText"
            android:padding="7dp"
            android:gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorDarkGrey"
            android:inputType="textMultiLine"
            android:background="@drawable/textbox_outline"
            android:minLines="3"/>

        <RelativeLayout
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/createGroup_extraInfo_text"
                android:text="@string/extra_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textAppearance="@style/TextAppearance.AppCompat"/>

            <ImageView
                android:id="@+id/extraInfo_help"
                android:layout_marginLeft="20dp"
                android:src="@drawable/ic_help"
                android:layout_toRightOf="@id/createGroup_extraInfo_text"
                android:layout_width="@dimen/ic_help_wh"
                android:layout_height="@dimen/ic_help_wh" />
        </RelativeLayout>

        <EditText
            android:id="@+id/extraInfo_editText"
            android:padding="7dp"
            android:gravity="top"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:textColor="@color/colorDarkGrey"
            android:inputType="textMultiLine"
            android:background="@drawable/textbox_outline"
            android:minLines="3"/>

        <Button
            android:id="@+id/creteGroup_done_button"
            android:text="@string/done"
            android:textSize="19sp"
            app:backgroundTint="@color/colorAccent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="15dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>
</ScrollView>