<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:background="@color/slide2_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="@string/slide2_title"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:textSize="@dimen/welcome_screen_title_size"
            android:textColor="@color/welcome_screen_slide_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <!-- Example group card -->
        <include layout="@layout/example_group_card"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="20dp"/>

        <!-- Group card description -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="@string/slide2_text"
            android:textAlignment="center"
            android:textColor="@color/welcome_screen_slide_text"
            android:textSize="@dimen/welcome_screen_text_size" />

        <!-- Been here mark description -->
        <LinearLayout style="@style/slide2_icon_description_linear_layout">

            <ImageView
                android:src="@drawable/ic_mark_beenhere"
                android:background="@drawable/icon_background"
                android:scaleType="fitXY"
                android:paddingTop="9dp"
                android:layout_width="48dp"
                android:layout_height="50dp" />

            <TextView
                android:text="- beenhere description"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/welcome_screen_text_size"
                android:textColor="@color/welcome_screen_slide_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </LinearLayout>

        <!-- Invited mark description -->
        <LinearLayout style="@style/slide2_icon_description_linear_layout">

            <ImageView
                android:src="@drawable/ic_mark_invite"
                android:background="@drawable/icon_background"
                android:scaleType="fitXY"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="5dp"
                android:gravity="center_vertical"
                android:text="- invited description"
                android:textColor="@color/welcome_screen_slide_title"
                android:textSize="@dimen/welcome_screen_text_size" />

        </LinearLayout>

        <!-- Member count description -->
        <LinearLayout style="@style/slide2_icon_description_linear_layout">

            <ImageView
                android:src="@drawable/ic_member_count"
                android:tint="@color/black"
                android:background="@drawable/icon_background"
                android:scaleType="fitXY"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:text="- member count description"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/welcome_screen_text_size"
                android:textColor="@color/welcome_screen_slide_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- Hike duration description -->
        <LinearLayout style="@style/slide2_icon_description_linear_layout">

            <ImageView
                android:src="@drawable/ic_clock"
                android:tint="@color/black"
                android:background="@drawable/icon_background"
                android:scaleType="fitXY"
                android:layout_width="48dp"
                android:layout_height="48dp" />

            <TextView
                android:text="- hike duration description"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/welcome_screen_text_size"
                android:textColor="@color/welcome_screen_slide_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

        <!-- Hike duration description -->
        <LinearLayout style="@style/slide2_icon_description_linear_layout">

            <ImageView
                android:src="@drawable/ic_calendar"
                android:tint="@color/black"
                android:background="@drawable/icon_background"
                android:scaleType="fitXY"
                android:layout_width="48dp"
                android:layout_height="48dp" />
            <TextView
                android:text="- hike date description"
                android:gravity="center_vertical"
                android:layout_marginStart="5dp"
                android:textSize="@dimen/welcome_screen_text_size"
                android:textColor="@color/welcome_screen_slide_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>